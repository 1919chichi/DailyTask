<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/emailLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="邮箱设置"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/emailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="#CCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="通知设置"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|end"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/allNoticeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:text="所有通知" />

            <RadioButton
                android:id="@+id/dingNoticeRadioButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="只监听钉钉" />
        </RadioGroup>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="悬浮图标"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <Switch
            android:id="@+id/floatSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:thumb="@drawable/select_switch_circle"
            android:track="@drawable/select_switch_background"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="#CCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="通知监听"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <Switch
            android:id="@+id/noticeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:thumb="@drawable/select_switch_circle"
            android:track="@drawable/select_switch_background"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="#CCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="辅助服务"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <Switch
            android:id="@+id/autoServiceSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:thumb="@drawable/select_switch_circle"
            android:track="@drawable/select_switch_background"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="#CCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="调整亮度"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <Switch
            android:id="@+id/turnoffLightSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:thumb="@drawable/select_switch_circle"
            android:track="@drawable/select_switch_background"
            tools:ignore="UseSwitchCompatOrMaterialXml" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="#CCC" />

    <RelativeLayout
        android:id="@+id/notificationLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="通知记录"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="#CCC" />

    <RelativeLayout
        android:id="@+id/introduceLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="使用说明"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_arrow_right" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:background="#CCC" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/itemLayoutHeight"
        android:background="@color/white"
        android:paddingHorizontal="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="当前版本"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />

        <TextView
            android:id="@+id/appVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:textColor="@color/colorText"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>
</LinearLayout>